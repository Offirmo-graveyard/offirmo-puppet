# Do not set this db to the same as development or production.
test:
  adapter: mysql
  encoding: utf8
  reconnect: false
  database: <%= app_name %>_test
  pool: 5
  username: RoR_<%= app_name %>_dev
  password: dev
  socket: /var/run/mysqld/mysqld.sock
