
production:
  adapter: mysql
  encoding: utf8
  reconnect: false
  database: <%= app_name %>_prod
  pool: 5
  username: RoR_<%= app_name %>_prod
  password: <%= mysql_prod_db_pwd %>
  socket: /var/run/mysqld/mysqld.sock

development:
  adapter: mysql
  encoding: utf8
  reconnect: false
  database: <%= app_name %>_dev
  pool: 5
  username: RoR_<%= app_name %>_dev
  password: dev
  socket: /var/run/mysqld/mysqld.sock

# Warning: The database defined as "test" will be erased and
